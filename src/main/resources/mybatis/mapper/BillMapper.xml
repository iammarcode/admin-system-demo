<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bill.mapper.BillMapper">

    <select id="getBills" resultType="com.example.bill.entities.BillVendor">
        select b.*,v.vendor_name from bill b left join vendor v on b.vid = v.vid
        where 1=1
        <if test="vid != null">
            and b.vid = #{vid}
        </if>
        <if test="paid != null">
            and b.paid = #{paid}
        </if>
    </select>

    <select id="getBillByBid" resultType="com.example.bill.entities.BillVendor">
        select b.*,v.vendor_name from bill b left join vendor v on b.vid = v.vid
        where b.bid = #{bid}
    </select>

    <update id="updateBill">
        UPDATE `bill`
        SET `total` = #{total}, `paid` = #{paid}, `vid` = #{vid},
        `created_date` = now()
        WHERE `bid` = #{bid};
    </update>

    <insert id="addBill" >
        INSERT INTO `bill` ( `total`, `paid`, `vid`, `created_date`)
        VALUES ( #{total}, #{paid}, #{vid}, now());
    </insert>

    <delete id="deleteBillByBid">
        delete from `bill` where `bid`=#{bid}
    </delete>




</mapper>